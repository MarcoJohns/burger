<div>
    <h1>BURGERS</h1>
    <h4>Not Eaten</h4>
    <hr>
    {{#each burgers}}
    <div>
        {{#unless devoured}}
        <p> Burger: {{this.burger_name}}</p>
        <button data-id={{this.id}} class="eat">eat</button>
        <hr>
        {{/unless}}
    </div>
    {{/each}}
    <h4>eaten</h4>
    <hr>
    {{#each burgers}}
    <div>

        {{#if devoured}}
        <p>{{this.burger_name}}</p>
        <button data-id={{this.id}} class="delete">delete</button>
        <hr>
        {{/if}}
    </div>
    {{/each}}
    <hr>
    <h4>add burger</h4>
    <input type="text" id="burger">
    <button id='addBurger'>add burger</button>
</div>